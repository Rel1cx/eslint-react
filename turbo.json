{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "**/*.config.ts",
    "tsconfig.base.json",
    "tsconfig.json",
    ".eslintrc.cjs",
    "dprint.json"
  ],
  "pipeline": {
    "build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": ["dist/**"]
    },
    "build:docs": {
      "cache": true,
      "dependsOn": [
        "build"
      ],
      "outputs": ["docs/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
