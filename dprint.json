{
  "lineWidth": 120,
  "typescript": {
    "indentWidth": 2,
    "quoteStyle": "preferDouble",
    "quoteProps": "asNeeded",
    "importDeclaration.sortNamedImports": "caseSensitive",
    "exportDeclaration.sortNamedExports": "caseSensitive",
    "module.sortImportDeclarations": "caseSensitive",
    "module.sortExportDeclarations": "caseSensitive"
  },
  "json": {
    "indentWidth": 2
  },
  "markdown": {},
  "excludes": [
    ".pkgs/**/*.d.ts",
    ".pkgs/**/*.js",
    "**/.next",
    "**/*-lock.json",
    "**/*-lock.yaml",
    "**/dist",
    "**/node_modules",
    "**/test/fixtures",
    "packages/**/docs"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.95.12.wasm",
    "https://plugins.dprint.dev/json-0.21.0.wasm",
    "https://plugins.dprint.dev/markdown-0.20.0.wasm",
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.24.1.wasm"
  ]
}
