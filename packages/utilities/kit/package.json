  "devDependencies": {
    "@local/configs": "workspace:*",
    "@tsconfig/node22": "^22.0.1",
    "tsup": "^8.4.0",
    "type-fest": "^4.41.0"
  },
  "engines": {
    "bun": ">=1.0.15",
    "node": ">=20.19.0"
  }
