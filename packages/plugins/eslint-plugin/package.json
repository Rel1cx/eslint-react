{
  "name": "@eslint-react/eslint-plugin",
  "version": "3.0.0-next.67",
  "description": "A unified plugin that combines all individual plugins from the eslint-react monorepo into one.",
  "keywords": [
    "react",
    "eslint",
    "eslint-react",
    "eslint-plugin",
    "eslint-plugin-react-x",
    "eslint-plugin-react-rsc",
    "eslint-plugin-react-dom",
    "eslint-plugin-react-web-api",
    "eslint-plugin-react-naming-convention"
  ],
  "homepage": "https://github.com/Rel1cx/eslint-react",
  "bugs": {
    "url": "https://github.com/Rel1cx/eslint-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rel1cx/eslint-react.git",
    "directory": "packages/plugins/eslint-plugin"
  },
  "license": "MIT",
  "author": "Rel1cx",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "./package.json"
  ],
  "scripts": {
    "build": "tsdown",
    "lint:publish": "pnpm publint",
    "lint:ts": "tsl",
    "publish": "pnpm run build && pnpm run lint:publish"
  },
  "dependencies": {
    "@eslint-react/eff": "workspace:*",
    "@eslint-react/shared": "workspace:*",
    "@typescript-eslint/scope-manager": "canary",
    "@typescript-eslint/type-utils": "canary",
    "@typescript-eslint/types": "canary",
    "@typescript-eslint/utils": "canary",
    "eslint-plugin-react-dom": "workspace:*",
    "eslint-plugin-react-naming-convention": "workspace:*",
    "eslint-plugin-react-rsc": "workspace:*",
    "eslint-plugin-react-web-api": "workspace:*",
    "eslint-plugin-react-x": "workspace:*",
    "ts-api-utils": "^2.4.0"
  },
  "devDependencies": {
    "@local/configs": "workspace:*",
    "tsdown": "^0.21.0-beta.2"
  },
  "peerDependencies": {
    "eslint": "^8.57.0 || ^9.0.0 || ^10.0.0",
    "typescript": ">=4.8.4 <6.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
