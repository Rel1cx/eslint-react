{
  "name": "eslint-plugin-react-hooks-extra",
  "version": "1.23.2-next.3",
  "description": "ESLint React's ESLint plugin for React Hooks related rules.",
  "keywords": [
    "react",
    "hooks",
    "hooks-extra",
    "eslint",
    "eslint-react",
    "eslint-plugin",
    "eslint-plugin-react-hooks-extra"
  ],
  "homepage": "https://github.com/rEl1cx/eslint-react",
  "bugs": {
    "url": "https://github.com/rEl1cx/eslint-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rEl1cx/eslint-react.git",
    "directory": "packages/plugins/eslint-plugin-react-hooks-extra"
  },
  "license": "MIT",
  "author": "Eva1ent<rel1cx@proton.me>",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "./package.json"
  ],
  "scripts": {
    "build": "tsup --dts-resolve",
    "lint:publish": "publint",
    "lint:type": "tsc --noEmit",
    "publish": "pnpm run build && pnpm run lint:publish"
  },
  "dependencies": {
    "@eslint-react/ast": "workspace:*",
    "@eslint-react/core": "workspace:*",
    "@eslint-react/eff": "workspace:*",
    "@eslint-react/jsx": "workspace:*",
    "@eslint-react/shared": "workspace:*",
    "@eslint-react/types": "workspace:*",
    "@eslint-react/var": "workspace:*",
    "@typescript-eslint/scope-manager": "^8.19.0",
    "@typescript-eslint/type-utils": "^8.19.0",
    "@typescript-eslint/types": "^8.19.0",
    "@typescript-eslint/utils": "^8.19.0",
    "string-ts": "^2.2.0",
    "ts-pattern": "^5.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@workspace/configs": "workspace:*",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "eslint": "^8.57.0 || ^9.0.0",
    "typescript": "^4.9.5 || ^5.3.3"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "bun": ">=1.0.15",
    "node": ">=18.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "module": "dist/index.mjs"
}
