{
  "name": "@eslint-react/eslint-plugin",
  "version": "0.8.8",
  "description": "ESLint x React's main ESLint plugin for writing better React, built (mostly) from scratch.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-react",
    "react",
    "ts",
    "tsx",
    "typescript",
    "typescript-eslint",
    "typescript-react"
  ],
  "homepage": "https://github.com/rel1cx/eslint-react",
  "bugs": {
    "url": "https://github.com/rel1cx/eslint-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rel1cx/eslint-react.git",
    "directory": "packages/eslint-plugin"
  },
  "license": "MIT",
  "author": "Eva1ent<let@ik.me>",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin swc3 && cp dist/index.d.ts dist/index.d.mts",
    "lint:publish": "pnpm publint",
    "lint:type": "bun run --bun tsc --noEmit",
    "publish": "pnpm run build && pnpm run lint:publish"
  },
  "dependencies": {
    "@typescript-eslint/parser": "6.10.0",
    "@typescript-eslint/scope-manager": "6.10.0",
    "@typescript-eslint/type-utils": "6.10.0",
    "@typescript-eslint/types": "6.10.0",
    "@typescript-eslint/utils": "6.10.0",
    "typescript": ">=5.3.2"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin-debug": "workspace:*",
    "@eslint-react/eslint-plugin-jsx": "workspace:*",
    "@eslint-react/eslint-plugin-naming-convention": "workspace:*",
    "@eslint-react/eslint-plugin-react": "workspace:*",
    "@eslint-react/eslint-plugin-react-hooks": "workspace:*",
    "@eslint-react/tools": "workspace:*",
    "@eslint-react/types": "workspace:*",
    "string-ts": "1.3.2"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "6.10.0",
    "eslint": ">=8.54.0",
    "typescript": ">=5.2.2"
  },
  "bundleDependencies": [
    "@eslint-react/eslint-plugin-debug",
    "@eslint-react/eslint-plugin-jsx",
    "@eslint-react/eslint-plugin-naming-convention",
    "@eslint-react/eslint-plugin-react",
    "@eslint-react/eslint-plugin-react-hooks",
    "@eslint-react/tools",
    "@eslint-react/types",
    "string-ts"
  ],
  "engines": {
    "bun": ">=1.0.11",
    "node": ">=18.15.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
