{
  "remove_trailing_whitespace_on_save": true,
  "extend_comment_on_newline": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  "formatter": {
    "external": {
      "command": "node_modules/.bin/dprint",
      "arguments": [
        "fmt",
        "--stdin",
        "{buffer_path}"
      ]
    }
  },
  "soft_wrap": "editor_width",
  "preferred_line_length": 120,
  "prettier": {
    "allowed": false
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150
    }
  },
  "file_types": {
    "Markdown": [
      "md",
      "mdx"
    ]
  },
  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.classpath",
    "**/.git",
    "**/.hg",
    "**/.jj",
    "**/.settings",
    "**/.svn",
    "**/.vscode",
    "**/CVS",
    "**/Thumbs.db"
  ],
  "languages": {
    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "node_modules/.bin/dprint",
          "arguments": [
            "fmt",
            "--stdin",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
