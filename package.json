{
    "name": "@eslint-react/monorepo",
    "version": "0.3.4",
    "description": "ESLint plugin for React and Preact function components with TypeScript, built from scratch (almost).",
    "keywords": [
        "eslint",
        "eslint-plugin",
        "eslint-react",
        "react",
        "ts",
        "tsx",
        "typescript",
        "typescript-eslint",
        "typescript-react"
    ],
    "homepage": "https://github.com/Rel1cx/eslint-react",
    "bugs": {
        "url": "https://github.com/Rel1cx/eslint-react/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Rel1cx/eslint-react.git"
    },
    "license": "MIT",
    "author": "Eva1ent<let@ik.me>",
    "scripts": {
        "prepare": "husky install",
        "build": "turbo build",
        "build:manual": "bun run ./scripts/build.ts",
        "build:docs": "pnpm --filter \"@eslint-react/*\" run build:docs",
        "format:check": "dprint check",
        "format:write": "dprint fmt",
        "lint": "pnpm run format:check && pnpm run lint:spell && pnpm run lint:deps && pnpm run lint:type && pnpm run lint:ts",
        "lint:deps": "skott -m file-tree -e .ts -s",
        "lint:unused": "knip",
        "lint:spell": "cspell lint --relative --no-progress '**'",
        "lint:ts": "eslint --cache .",
        "lint:ts-fix": "eslint --cache --fix .",
        "lint:type": "pnpm -r run lint:type",
        "test": "pnpm run -r test",
        "update": "taze",
        "inspect:eslint-config": "eslint --print-config ./taze.config.ts > eslint-config.json",
        "inspect:deps": "skott -e .ts -s -t"
    },
    "devDependencies": {
        "@effect/language-service": "0.0.21",
        "@rollup/plugin-commonjs": "25.0.7",
        "@rollup/plugin-json": "6.0.1",
        "@rollup/plugin-node-resolve": "15.2.3",
        "@rollup/plugin-typescript": "11.1.5",
        "@swc/core": "1.3.93",
        "@tsconfig/node20": "20.1.2",
        "@tsconfig/strictest": "2.0.2",
        "@types/node": "20.8.6",
        "@typescript-eslint/eslint-plugin": "6.8.0",
        "@typescript-eslint/parser": ">=6.8.0",
        "bun-types": "1.0.6",
        "cspell": "7.3.8",
        "dprint": "0.41.0",
        "effect": "2.0.0-next.49",
        "eslint": ">=8.51.0",
        "eslint-config-with-tsconfig": "2.7.5",
        "eslint-doc-generator": "1.5.2",
        "eslint-plugin-eslint-plugin": "5.1.1",
        "eslint-plugin-filenames-simple": "0.8.0",
        "eslint-plugin-functional-core": "1.7.1",
        "eslint-plugin-jsdoc": "46.8.2",
        "eslint-plugin-vitest": "0.3.2",
        "fast-equals": "5.0.1",
        "fast-glob": "3.3.1",
        "husky": "8.0.3",
        "knip": "2.33.4",
        "pathe": "1.1.1",
        "publint": "0.2.4",
        "rollup": "4.1.4",
        "rollup-plugin-dts": "6.1.0",
        "rollup-plugin-swc3": "0.10.2",
        "skott": "0.31.3",
        "taze": "0.11.4",
        "tiny-invariant": "1.3.1",
        "ts-pattern": "5.0.5",
        "turbo": "1.10.15",
        "type-fest": "4.4.0",
        "typedoc": "0.25.2",
        "typedoc-plugin-markdown": "3.16.0",
        "typescript": ">=5.2.2",
        "vitest": "0.34.6"
    },
    "peerDependencies": {
        "@typescript-eslint/parser": ">=6.8.0",
        "eslint": ">=8.51.0",
        "typescript": ">=5.2.2"
    },
    "packageManager": "pnpm@8.9.2",
    "engines": {
        "bun": ">=1.0.6",
        "node": ">=18.15.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "pnpm": {
        "overrides": {
            "has": "npm:@nolyfill/has@latest",
            "rambda": "latest",
            "eslint": ">=8.51.0",
            "typescript": "beta",
            "@typescript-eslint/scope-manager": "6.8.0",
            "@typescript-eslint/type-utils": "6.8.0",
            "@typescript-eslint/types": "6.8.0",
            "@typescript-eslint/utils": "6.8.0",
            "@typescript-eslint/parser": ">=6.8.0"
        }
    }
}
