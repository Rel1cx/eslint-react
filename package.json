{
  "name": "@eslint-react/monorepo",
  "version": "1.5.2",
  "description": "Essential React lints for libraries and frameworks that use React as a UI runtime.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-react",
    "react",
    "ts",
    "tsx",
    "typescript",
    "typescript-eslint",
    "typescript-react"
  ],
  "homepage": "https://github.com/rel1cx/eslint-react",
  "bugs": {
    "url": "https://github.com/rel1cx/eslint-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rel1cx/eslint-react"
  },
  "license": "MIT",
  "author": "Eva1ent<let@ik.me>",
  "workspaces": [
    "packages/**",
    "examples/*",
    "website"
  ],
  "scripts": {
    "build": "pnpm run update:version && turbo build --filter='./packages/**'",
    "build:all": "pnpm run build && pnpm run build:docs && pnpm run build:website",
    "build:docs": "turbo build:docs --filter='./packages/**'",
    "build:force": "turbo build --force --filter='./packages/**'",
    "build:website": "pnpm run update:website && cd website && pnpm run build",
    "format:check": "dprint check",
    "format:package-json": "bun run --bun ./scripts/format-package-json.ts",
    "format:write": "dprint fmt",
    "inspect:deps": "skott -e .ts --trackBuiltinDependencies",
    "inspect:eslint-config": "eslint --print-config ./taze.config.ts > eslint-config.json",
    "lint": "pnpm run lint:spell && pnpm run lint:deps && pnpm run lint:type && pnpm run lint:ts && pnpm run lint:publish && pnpm run lint:examples && pnpm run lint:website",
    "lint:deps": "skott -m file-tree -e .ts -s",
    "lint:examples": "pnpm -r -F './examples/*' run --parallel lint",
    "lint:publish": "pnpm -r run --parallel lint:publish",
    "lint:spell": "cspell lint --relative --no-progress '**'",
    "lint:ts": "eslint --max-warnings 0 --cache .",
    "lint:type": "pnpm -r run --parallel lint:type",
    "lint:website": "cd website && pnpm run lint",
    "prepare": "husky install && pnpm run build",
    "test": "vitest --run --logHeapUsage",
    "test:ui": "vitest --ui",
    "update:deps": "taze",
    "update:version": "bun run --bun ./scripts/update-version.ts && pnpm run format:package-json",
    "update:website": "bun run --bun ./scripts/update-website.ts"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-typescript": "11.1.6",
    "@swc/core": "1.3.107",
    "@tsconfig/node20": "20.1.2",
    "@tsconfig/strictest": "2.0.2",
    "@types/node": "20.11.13",
    "@typescript-eslint/eslint-plugin": ">=6.20.0",
    "@typescript-eslint/parser": ">=6.20.0",
    "@typescript-eslint/rule-tester": ">=6.20.0",
    "@vitest/ui": "1.2.2",
    "bun": "1.0.25",
    "bun-types": "1.0.25",
    "cspell": "8.3.2",
    "dedent": "1.5.1",
    "dprint": "0.45.0",
    "effect": "2.2.3",
    "eslint": ">=8.56.0",
    "eslint-config-with-tsconfig": "2.14.3",
    "eslint-plugin-eslint-plugin": "5.2.1",
    "eslint-plugin-filenames-simple": "0.9.0",
    "eslint-plugin-functional": "6.0.0",
    "eslint-plugin-jsdoc": "48.0.4",
    "eslint-plugin-total-functions": "7.1.0",
    "eslint-plugin-vitest": "0.3.21",
    "fast-equals": "5.0.1",
    "husky": "9.0.7",
    "markdownlint": "0.33.0",
    "pathe": "1.1.2",
    "publint": "0.2.7",
    "rollup": "4.9.6",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-swc3": "0.11.0",
    "rollup-plugin-visualizer": "5.12.0",
    "skott": "0.32.1",
    "sort-package-json": "2.7.0",
    "taze": "0.13.1",
    "tiny-invariant": "1.3.1",
    "ts-pattern": "5.0.6",
    "turbo": "1.12.0",
    "type-fest": "4.10.2",
    "typedoc": "0.25.7",
    "typedoc-plugin-markdown": "3.17.1",
    "typedoc-plugin-rename-defaults": "0.7.0",
    "typescript": ">=5.3.3",
    "vitest": "1.2.2"
  },
  "packageManager": "pnpm@8.13.1",
  "engines": {
    "bun": ">=1.0.15",
    "node": ">=18.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "overrides": {
      "@typescript-eslint/parser": ">=6.20.0",
      "@typescript-eslint/scope-manager": ">=6.20.0",
      "@typescript-eslint/type-utils": ">=6.20.0",
      "@typescript-eslint/types": ">=6.20.0",
      "@typescript-eslint/utils": ">=6.20.0",
      "@typescript-eslint/eslint-plugin": ">=6.20.0",
      "eslint": ">=8.56.0",
      "effect": "2.2.3",
      "next": "14.1.0",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "esbuild": "0.19.10",
      "lodash.set": "4.3.2",
      "array-includes": "npm:@nolyfill/array-includes@latest",
      "array.prototype.findlastindex": "npm:@nolyfill/array.prototype.findlastindex@latest",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@latest",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@latest",
      "array.prototype.tosorted": "npm:@nolyfill/array.prototype.tosorted@latest",
      "es-iterator-helpers": "npm:@nolyfill/es-iterator-helpers@latest",
      "function-bind": "npm:@nolyfill/function-bind@latest",
      "has": "npm:@nolyfill/has@latest",
      "hasown": "npm:@nolyfill/hasown@latest",
      "object.assign": "npm:@nolyfill/object.assign@latest",
      "object.entries": "npm:@nolyfill/object.entries@latest",
      "object.fromentries": "npm:@nolyfill/object.fromentries@latest",
      "object.groupby": "npm:@nolyfill/object.groupby@latest",
      "object.hasown": "npm:@nolyfill/object.hasown@latest",
      "object.values": "npm:@nolyfill/object.values@latest",
      "string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@latest",
      "typedarray": "npm:@nolyfill/typedarray@latest"
    }
  }
}
