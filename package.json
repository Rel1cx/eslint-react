{
  "name": "@eslint-react/monorepo",
  "version": "0.8.9-beta.3",
  "description": "ESLint x React's monorepo. A set of ESLint plugins for writing better React, built (mostly) from scratch.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-react",
    "react",
    "ts",
    "tsx",
    "typescript",
    "typescript-eslint",
    "typescript-react"
  ],
  "homepage": "https://github.com/rel1cx/eslint-react",
  "bugs": {
    "url": "https://github.com/rel1cx/eslint-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rel1cx/eslint-react.git"
  },
  "license": "MIT",
  "author": "Eva1ent<let@ik.me>",
  "workspaces": [
    "packages/*",
    "examples/*",
    "website"
  ],
  "scripts": {
    "build": "turbo build --filter='./packages/*'",
    "build:all": "pnpm run build && pnpm run build:docs && pnpm run build:website",
    "build:docs": "turbo build:docs --filter='./packages/*'",
    "build:force": "turbo build --force --filter='./packages/*'",
    "build:website": "pnpm run update:website && cd website && pnpm run build",
    "clean": "rm -r -f packages/*/dist packages/*/docs **/*/node_modules pnpm-lock.yaml",
    "format:check": "dprint check",
    "format:write": "dprint fmt",
    "inspect:deps": "bun run --bun skott -e .ts -s -t",
    "inspect:eslint-config": "eslint --print-config ./taze.config.ts > eslint-config.json",
    "inspect:unused": "knip",
    "lint": "pnpm run format:check && pnpm run lint:spell && pnpm run lint:deps && pnpm run lint:type && pnpm run lint:ts && pnpm run lint:publish && pnpm run lint:examples",
    "lint:deps": "bun run --bun skott -m file-tree -e .ts -s",
    "lint:examples": "pnpm -r -F './examples/*' run --parallel lint",
    "lint:publish": "pnpm -r run --parallel lint:publish",
    "lint:spell": "cspell lint --relative --no-progress '**'",
    "lint:ts": "bun run --bun eslint --max-warnings 0 --cache .",
    "lint:type": "pnpm -r run --parallel lint:type",
    "prepare": "husky install && pnpm run build",
    "test": "vitest --run --logHeapUsage",
    "test:ui": "vitest --ui",
    "update": "taze",
    "update:website": "bun run --bun ./scripts/update-website.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.0.1",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-typescript": "11.1.5",
    "@swc/core": "1.3.99",
    "@tsconfig/node20": "20.1.2",
    "@tsconfig/strictest": "2.0.2",
    "@types/node": "20.9.4",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "@typescript-eslint/rule-tester": "6.10.0",
    "@vitest/ui": "0.34.6",
    "bun": "1.0.14",
    "bun-types": "1.0.14",
    "cspell": "7.3.9",
    "dprint": "0.43.0",
    "effect": "2.0.0-next.56",
    "eslint": ">=8.54.0",
    "eslint-config-with-tsconfig": "2.9.60",
    "eslint-plugin-eslint-plugin": "5.1.1",
    "eslint-plugin-filenames-simple": "0.9.0",
    "eslint-plugin-functional": "6.0.0",
    "eslint-plugin-functional-core": "1.7.1",
    "eslint-plugin-jsdoc": "46.9.0",
    "eslint-plugin-vitest": "0.3.10",
    "fast-equals": "5.0.1",
    "fast-glob": "3.3.2",
    "husky": "8.0.3",
    "knip": "2.42.0",
    "pathe": "1.1.1",
    "publint": "0.2.5",
    "rollup": "4.5.1",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-swc3": "0.10.4",
    "skott": "0.31.3",
    "taze": "0.12.1",
    "tiny-invariant": "1.3.1",
    "ts-pattern": "5.0.5",
    "turbo": "1.10.16",
    "type-fest": "4.8.2",
    "typedoc": "0.25.3",
    "typedoc-plugin-markdown": "3.17.1",
    "typedoc-plugin-mermaid": "1.10.0",
    "typedoc-plugin-rename-defaults": "0.7.0",
    "typescript": ">=5.3.2",
    "vitest": "0.34.6"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "6.10.0",
    "eslint": ">=8.54.0",
    "typescript": ">=5.3.2"
  },
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "bun": ">=1.0.11",
    "node": ">=18.15.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "overrides": {
      "@typescript-eslint/parser": "6.10.0",
      "@typescript-eslint/scope-manager": "6.10.0",
      "@typescript-eslint/type-utils": "6.10.0",
      "@typescript-eslint/types": "6.10.0",
      "@typescript-eslint/utils": "6.10.0",
      "@typescript-eslint/eslint-plugin": "6.10.0",
      "eslint": ">=8.54.0",
      "effect": "2.0.0-next.56",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "typescript": "5.2.2",
      "eslint-plugin-import": "npm:eslint-plugin-i@latest",
      "has": "npm:@nolyfill/has@latest",
      "array-includes": "npm:@nolyfill/array-includes@latest",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@latest",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@latest",
      "array.prototype.tosorted": "npm:@nolyfill/array.prototype.tosorted@latest",
      "es-iterator-helpers": "npm:@nolyfill/es-iterator-helpers@latest",
      "function-bind": "npm:@nolyfill/function-bind@latest",
      "object.assign": "npm:@nolyfill/object.assign@latest",
      "object.entries": "npm:@nolyfill/object.entries@latest",
      "object.fromentries": "npm:@nolyfill/object.fromentries@latest",
      "object.hasown": "npm:@nolyfill/object.hasown@latest",
      "object.values": "npm:@nolyfill/object.values@latest",
      "string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@latest"
    }
  }
}
