{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node22/tsconfig.json",
    "@tsconfig/next/tsconfig.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "erasableSyntaxOnly": true,
    "paths": {
      "#": [
        "."
      ],
      "#/*": [
        "./*"
      ],
      "#/.source": [
        "./.source/index.ts"
      ]
    },
    "plugins": [
      {
        "name": "@effect/language-service"
      },
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
